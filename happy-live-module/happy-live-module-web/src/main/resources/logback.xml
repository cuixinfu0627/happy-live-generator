<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false" scan="true" scanPeriod="1000 seconds">
	<property name="appName" value="happy-live" />
	<property name="module" value="module" />
	<!-- Output to Console -->
	<appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>@log.pattern@</pattern>
			<charset>@project.build.sourceEncoding@</charset>
		</encoder>
	</appender>
	<!-- Output to File -->
	<appender name="File"
			  class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>@log.path@${appName}/${module}-web.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<FileNamePattern>
				@log.path@${appName}/${module}-web.%d{yyyy-MM-dd}.%i.log
			</FileNamePattern>
			<!-- keep 1 days worth of history -->
			<MaxHistory>@log.history.days@</MaxHistory>
			<maxFileSize>@log.maxFileSize@</maxFileSize>
			<totalSizeCap>@log.totalSizeCap@</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>@log.pattern@</pattern>
			<charset>@project.build.sourceEncoding@</charset>
		</encoder>
	</appender>
	<root level="@log.root.level@">
		<appender-ref ref="Console" />
		<appender-ref ref="File" />
	</root>

	<logger name="com.ibatis" level="debug" />
	<logger name="com.ibatis.common.jdbc.SimpleDataSource" level="debug" />
	<logger name="com.ibatis.common.jdbc.ScriptRunner" level="debug" />
	<logger name="org.mybatis.generator" level="debug" />
	<logger name="com.ibatis.sqlmap.engine.impl.SqlMapClientDelegate" level="debug" />
	<logger name="java.sql.Connection" level="debug" />
	<logger name="java.sql.Statement" level="debug" />
	<logger name="java.sql.PreparedStatement" level="debug" />
	<logger name="com.happy.live" level="debug" />
</configuration>
